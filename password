<body>
    <div id="passwordScreen">
        <div class="password-container">
            <h1>Restricted Access</h1>
            <p>Please enter the password to continue.</p>
            <input 
                type="password" 
                id="passwordInput" 
                class="password-input" 
                placeholder="Password"
                autocomplete="off"
            >
            <button class="enter-button" onclick="checkPassword()">Enter</button>
            <div id="errorMessage" class="error-message">Incorrect password. Please try again.</div>
        </div>
    </div>

    <iframe id="gameFrame" src=""></iframe>

    <script>
        const CORRECT_PASSWORD = "Shrek72";
        // CHANGE THIS TO YOUR ACTUAL GAME FILE URL
        const GAME_URL = "stealth-game.html";

        function checkPassword() {
            const input = document.getElementById('passwordInput');
            const errorMessage = document.getElementById('errorMessage');
            
            if (input.value === CORRECT_PASSWORD) {
                // Correct password - load game
                document.getElementById('passwordScreen').style.display = 'none';
                const gameFrame = document.getElementById('gameFrame');
                gameFrame.src = GAME_URL;
                gameFrame.style.display = 'block';
            } else {
                // Wrong password - show error
                errorMessage.classList.add('show');
                input.value = '';
                input.style.borderColor = 'rgba(239, 68, 68, 0.5)';
                
                setTimeout(() => {
                    errorMessage.classList.remove('show');
                    input.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                }, 2000);
            }
        }

        // Allow Enter key to submit password
        document.addEventListener('DOMContentLoaded', () => {
            const passwordInput = document.getElementById('passwordInput');
            passwordInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    checkPassword();
                }
            });
            passwordInput.focus();
        });
    </script>
</body>
